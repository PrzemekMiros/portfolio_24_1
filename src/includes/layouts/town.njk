    {% set counter = 1 %}
    {% for post in collections.services %}
    <a href="{{ post.url }}" title="{{ post.data.title }}">
      <div class="service-item">
        <div class="row gx-0 pt-large pb-medium fadeIn">
          <div class="offset-md-1 col-md-1">
            <p class="service-number mt-2 color-text">0{{ counter }}</p>
          </div>
          <div class="col-md-3">
            <h3 class="mt-1 color-heading">{{ post.data.title }}</h3>
          </div>
          <div class="offset-md-1 col-md-4">
            <p class="mt-2 color-text">
              {{ post.data.description }}
            </p>
          </div>
          <div class="col-md-1 text-md-end">
            <p class="service-arrow h2 my-0 color-text">+</p>
          </div>
        </div>
