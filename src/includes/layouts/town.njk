            <div class="pr-md-5">
              <a href="{{ post.url }}" title="{{ post.data.client }}">
                <p class="archive-post-client mb-2 mb-md-3 color-accent-1">
                  {{ post.data.client }}
                </p>
              </a>
              <a href="{{ post.url }}" title="{{ post.data.title }}">
                <h2 class="archive-post-title h2 mt-0 mb-1">
                  {{ post.data.title }}
                </h2>
              </a>
              <div class="d-none d-lg-block">
                <p class="line-clamp-3 mt-4 mb-4">
                  {{ post.data.description}}
                </p>
              </div>
