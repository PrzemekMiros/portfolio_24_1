{% include "partials/header.njk" %}

<section class="pt-xlarge pb-small" data-scroll-section>
  <div class="container">

      <div class="offset-md-2 col-md-8">
        <div class="single-post-title-wrap pb-md-small pb-small">
          <h1 class="xl split-text-lines single-post-title mt-0 mb-5">
            {{ client }}
          </h1>
          <div class="row gx-5">
            <div class="col-md-4">
                    <p class="small">
                        Kategoria
                    </p>
                    <div class="line-x lx-op"></div>
                    <p class="mt-4">
                      {{ category }}
                    </p>

            </div>
            <div class="col-md-4">
                <p class="small">
                    Wykonano
                </p>
                <div class="line-x lx-op"></div>
                <p class="mt-4">
                  {{ date | dateDisplay }}
                </p>
            </div>
            <div class="col-md-4">
                <p class="small">
                    Wykonano
                </p>
                <div class="line-x lx-op"></div>
                <p class="mt-4">
                  {{ date | dateDisplay }}
                </p>
            </div>
          </div>
        </div>
      </div>

    <div class="offset-md-1 col-md-10">
        <div class="parallax-wrap aspect_16-12 fadeIn mb-3 mb-lg-5">
            <img
              src="{{ imageMain | url }}"
              alt="{{ title }}"
              class="single-post-image img-fluid"
            />
          </div>
    </div>

    <div class="row fadeIn">
      <div class="offset-md-2 col-md-8">
        {{ content | safe }}
        <a
          href="{{ link }}"
          title="Zobacz online"
          class="button magnetic"
          target="_blank"
          rel="nofollow"
          data-strength="100"
          data-strength-text="50"
        >
          <span>Zobacz online</span>
          <svg
            fill="none"
            viewBox="0 0 14 14"
            xmlns="http://www.w3.org/2000/svg"
            height="11"
            width="11"
          >
            <path
              d="M13 1L1 13"
              stroke="var(--color-accent-1)"
              stroke-linecap="round"
              stroke-width="2"
              stroke-linejoin="round"
            ></path>
            <path
              d="M3 1H13V11"
              stroke="var(--color-accent-1)"
              stroke-linecap="round"
              stroke-width="2"
              stroke-linejoin="round"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <div class="pt-medium fadeIn">
      <div class="line-x"></div>
    </div>

    <div class="post-navigation pt-small">
      {%- if collections.works %} {%- set nextPost = collections.works |
      getNextCollectionItem(page) %} {%- set previousPost = collections.works |
      getPreviousCollectionItem(page) %} {%- if nextPost or previousPost %}
      <ul class="d-flex flex-wrap fadeIn">
        {%- if previousPost %}
        <li class="hover-reveal-wrap col-md-6 prev d-none d-md-block">
          <p class="mb-4">
            <small> Poprzedni: </small>
          </p>
          <a
            href="{{ previousPost.url | url }}"
            title="{{ previousPost.data.client }}"
            class="h4"
            >{{ previousPost.data.title }}</a
          >
          <div class="hover-reveal">
            <img src="{{ previousPost.data.thumbnail }}" class="hidden-img" />
          </div>
        </li>
        {% endif %} {%- if nextPost %}
        <li class="hover-reveal-wrap col-md-6 next">
          <p class="mb-4">
            <small> Kolejny: </small>
          </p>
          <a
            href="{{ nextPost.url | url }}"
            title="{{ nextPost.data.client }}"
            class="h4"
            >{{ nextPost.data.title }}</a
          >
          <div class="hover-reveal">
            <img src="{{ nextPost.data.thumbnail }}" class="hidden-img" />
          </div>
        </li>
        {% endif %}
      </ul>
      {%- endif %} {%- endif %}
    </div>
  </div>
</section>

{% include "partials/footer.njk" %}
