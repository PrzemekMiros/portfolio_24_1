{% include "partials/header.njk" %}

<section class="pt-large pt-md-xlarge pb-small" data-scroll-section>
    <div class="container">

        <div class="content row gx-5 fadeIn" id="pinShare">
            <div class="offset-md-1 col-md-5">
                    <div class="parallax-wrap aspect_16-9 fadeIn mb-3 mb-lg-5">
                        <img src="{{ thumbnail | url }}" alt="{{ title }}" class="single-post-image img-fluid">
                    </div>
            </div>
            <div class="col-md-6">
                    <div class="single-post-title-wrap">
                        <div class="breacrumbs fadeIn">
                            <a href="/" title="Strona glówna">
                                Główna
                            </a>
                            <span>
                                |
                            </span>
                            <a href="/produkty" title="Produkty">
                                Produkty
                            </a>
                            <span>
                                |
                            </span>
                            <span>
                                {{ title }}
                            </span>
                        </div>
                        <h1 class="single-post-title split-text-lines mt-3 mb-4 mb-md-5">
                            {{ title }}
                        </h1>
                    </div>
                {{ content | safe}}
                    <button title="Zobacz więcej" class="button magnetic snipcart-add-item fadeIn mt-2 mb-2" data-strength="100" data-strength-text="50"
                    data-item-id="{{ counter }}"
                    data-item-price="79.99"
                    data-item-description="{{ description }}"
                    data-item-image="{{ thumbnail | url }}"
                    data-item-name="{{ title }}"> 
                        <span>Kup teraz</span>
                        <svg width="11" height="11" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M13 1L1 13" stroke="var(--color-accent-1)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M3 1H13V11" stroke="var(--color-accent-1)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </button>
            </div>
        </div>

        <div class="row pt-medium fadeIn">
            <div class="offset-md-1 col-md-10">
                <div class="line-x"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="post-navigation pt-small">
                    {%- if collections.services %}
                    {%- set nextPost = collections.services | getNextCollectionItem(page) %}
                    {%- set previousPost = collections.services | getPreviousCollectionItem(page) %}
                    {%- if nextPost or previousPost %}
                    <ul class="d-flex flex-wrap fadeIn">
                        {%- if previousPost %}
                        <li class="hover-reveal-wrap offset-md-1 col-md-5 prev d-none d-md-block">
                            <p class="mb-4">
                                <small>
                                    Poprzedni:
                                </small>
                            </p>
                            <a href="{{ previousPost.url | url }}" title="{{ previousPost.data.client }}"
                                class="h3">{{ previousPost.data.title }}</a>
                            <div class="hover-reveal">
                                <img src="{{ previousPost.data.thumbnail }}" class="hidden-img">
                            </div>
                        </li>
                        {% endif %}
                        {%- if nextPost %}
                        <li class="hover-reveal-wrap offset-md-1 col-md-5 next">
                            <p class="mb-4">
                                <small>
                                    Kolejny:
                                </small>
                            </p>
                            <a href="{{ nextPost.url | url }}" title="{{ nextPost.data.client }}"
                                class="h3">{{ nextPost.data.title }}</a>
                            <div class="hover-reveal">
                                <img src="{{ nextPost.data.thumbnail }}" class="hidden-img">
                            </div>
                        </li>
                        {% endif %}
                    </ul>
                    {%- endif %}
                    {%- endif %}
                </div>
            </div>
        </div>

    </div>
</section>

{% include "partials/footer.njk" %}