<section class="pt-medium pb-medium" data-scroll-section>
  <div class="container">
    <div class="row gx-0">
      <div class="col-md-6">
        <h2 class="h1 split-text-lines mt-0">
          Realizacje<span class="dot">.</span>
        </h2>
      </div>
      <div class="col-md-6 p-relative">
        <div class="swiper-button-prev fadeIn"></div>
        <div class="swiper-button-next fadeIn"></div>
      </div>
    </div>

    <div class="pb-medium"></div>

    <div class="swiper-container fadeIn">
      <div class="swiper">
        <div class="swiper-wrapper">
          {% for post in collections.works %}
          <div class="swiper-slide">
            <div class="slide-content">
              <div class="swiper-image-wrap">
                <img
                  class="swiper-image"
                  src="{{ post.data.thumbnail }}"
                  alt="{{ post.data.title }}"
                  width="630"
                  height="699"
                />
              </div>
            <h3 class="archive-post-title h4 mt-5 mb-1">
              {{ post.data.title }}
            </h3>
            <div class="space-wrap">
              <p class="line-clamp-2 mt-3 mb-2">
                {{ post.data.description }}
              </p>
            </div>
            <a
              href="{{ post.data.link }}"
              title="Zobacz wiÄ™cej"
              class="button magnetic mt-4 mb-4"
              data-strength="100"
              data-strength-text="50"
              target="_blank"
            >
              <span>Zobacz online</span>
              <svg
                width="11"
                height="11"
                viewBox="0 0 14 14"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M13 1L1 13"
                  stroke="var(--color-accent-1)"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
                <path
                  d="M3 1H13V11"
                  stroke="var(--color-accent-1)"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                ></path>
              </svg>
            </a>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!--
        <div class="swiper-scrollbar pt-medium"></div>
        <div class="swiper-pagination"></div>
      -->
    </div>
  </div>
</section>
