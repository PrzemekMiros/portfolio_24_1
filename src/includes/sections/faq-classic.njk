<section class="pt-medium pb-large" data-scroll-section>
    <div class="container">
        <div class="offset-md-3 col-md-6 pb-md-small">
          <h2 class="xl my-0 split-text-lines">
            Pytania<span class="dot">.</span>
          </h2>
        </div>
        <div class="offset-md-1 col-md-10"> 
            {% for post in collections.faq %}
            <div class="line-x lx-op mt-4"></div>
            <div class="row gx-5 pt-xsmall pt-md-small">
              <div class="col-md-6">
                <h2 class="split-text-lines">
                  {{ post.data.title }}
                </h2>
              </div>
              <div class="col-md-6">
                <p class="split-text-lines mb-5">
                  {{ post.data.answer }}
                </p>
              </div>
            </div>
            {% endfor %}
            <div class="line-x lx-op mt-4"></div>
        </div>

    </div>
  </section>