<section class="pt-medium pb-medium" data-scroll-section>
  <div class="container">
    <div class="row">
      <div class="offset-md-3 col-8 col-md-5">
        <h2 class="xl my-0 split-text-lines">
          Zaufali mi<span class="dot">.</span>
        </h2>
      </div>
      <div class="col-4 col-md-2 p-relative">
        <button class="swiper-button-prev fadeIn">
          <svg
          width="44"
          height="45"
          viewBox="0 0 44 45"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect
            x="1"
            y="1.33337"
            width="42"
            height="42"
            rx="21"
            fill="none"
            stroke="var(--color-dark-1)"
            stroke-width="2"
          />
          <path
            d="M12.7369 21.6263C12.3464 22.0168 12.3464 22.65 12.7369 23.0405L19.1009 29.4044C19.4914 29.795 20.1246 29.795 20.5151 29.4044C20.9056 29.0139 20.9056 28.3808 20.5151 27.9902L14.8582 22.3334L20.5151 16.6765C20.9056 16.286 20.9056 15.6528 20.5151 15.2623C20.1246 14.8718 19.4914 14.8718 19.1009 15.2623L12.7369 21.6263ZM31.7773 21.3334L13.444 21.3334V23.3334L31.7773 23.3334V21.3334Z"
            fill="var(--color-accent-1)"
          />
        </svg>
        </button>
        <button class="swiper-button-next fadeIn">
          <svg
            width="45"
            height="45"
            viewBox="0 0 45 45"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect
              x="1.66797"
              y="1.33337"
              width="42"
              height="42"
              rx="21"
              fill="none"
              stroke="var(--color-dark-1)"
              stroke-width="2"
            />
            <path
              d="M33.1639 23.0405C33.5544 22.65 33.5544 22.0168 33.1639 21.6263L26.7999 15.2623C26.4094 14.8718 25.7763 14.8718 25.3857 15.2623C24.9952 15.6528 24.9952 16.286 25.3857 16.6765L31.0426 22.3334L25.3857 27.9902C24.9952 28.3808 24.9952 29.0139 25.3857 29.4044C25.7763 29.795 26.4094 29.795 26.7999 29.4044L33.1639 23.0405ZM14.1133 23.3334H32.4568V21.3334H14.1133V23.3334Z"
              fill="var(--color-accent-1)"
            />
          </svg>
        </button>
      </div>
    </div>

    <div class="swiper pb-medium">
      <div class="swiper-wrapper pt-medium">

        {% for post in collections.clients %}
        <div class="swiper-slide fadeIn">
          <div class="client-card">
          <div class="client-content">
            <div class="client-name d-none d-md-block">
              <p class="mt-0 mb-5">{{ post.data.title }}</p>
            </div>
            <div class="client-image">
            {% clientImage "src/" + post.data.logo, post.data.title %}  
            <div class="client-image-placeholder">
              <svg width="320" height="135" viewBox="0 0 320 135" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect width="320" height="135" fill="none" fill-opacity="0"/>
              </svg>
            </div>      
            </div>
          </div>
          </div>
        </div>
        {% endfor %}

      </div>
    </div>
  </div>
</section>
