<section class="pt-medium pb-xlarge" data-scroll-section>
    <div class="container">
        <div class="offset-md-3 col-md-6">
          <h2 class="xl my-0 split-text-lines">
            Pytania<span class="dot">.</span>
          </h2>
          <div class="accordion-wrap pt-small"> 
            <div class="line-x lx-op d-md-none mt-5 mt-md-0"></div>
            {% for post in collections.faq %}
            <div class="">
              <button class="accordion mt-4 pt-xsmall pb-xsmall">
                <span class="h3 title my-0 split-text-lines">
                  {{ post.data.title }}
                </span>
                <span class="icon fadeIn"></span>
              </button>
              <div class="panel col-md-11">
                <p>
                  {{ post.data.answer }}
                </p>
              </div>
            </div>
            <div class="line-x lx-op mt-4"></div>
            {% endfor %}
          </div>
        </div>
    </div>
  </section>