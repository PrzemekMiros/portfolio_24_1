<section class="pb-large" data-scroll-section>
    <div class="container">
        <div class="row gx-5 pin-gallery">
            <div class="offset-md-1 col-md-5">
                <div class="left">
                    <div class="detailsWrapper">
                        {% for post in collections.works.slice(0,12) %}
                        <div class="details pb-xsmall">

                            <a href="{{ post.url }}" title="{{ post.data.client }}">
                                <p class="archive-post-client split-text-lines mt-4 mb-2">
                                    <small> {{ post.data.client }}</small>
                                </p>
                            </a>

                            <a href="{{ post.url }}" title="{{ post.data.title }}" class="d-inline-block">
                                <h2 class="split-text-lines pin-headline h3 my-2">
                                    {{ post.data.title }}
                                </h2>
                            </a>

                            <div>
                                <p class="line-clamp-3 split-text-lines mt-4 mb-4">
                                    {{ post.data.description}}
                                </p>
                            </div>

                            <div>
                            <a href="{{ post.data.link }}" title="{{ post.data.title }}" target="_blank" rel="nofollow" class="button magnetic fadeIn mt-2 mb-2" data-strength="100" data-strength-text="50">
                            <span> Zobacz online</span>
                            <svg width="11" height="11" viewBox="0 0 14 14" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path d="M13 1L1 13" stroke="var(--color-accent-1)" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round"></path>
                                <path d="M3 1H13V11" stroke="var(--color-accent-1)" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round"></path>
                            </svg>
                            </a>
                            </div>

                        </div>
                        <div class="line-x lx-1 lx-op"></div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-md-6" id="pinSection2">
                <div data-scroll data-scroll-sticky data-scroll-target="#pinSection2">
                    <div class="right">
                        <div class="photos fadeIn">
                        {% for post in collections.works.slice(0,12) %}
                                <div class="photo">
                                    <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}" loading="lazy" class="swipeimage" />
                                </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>